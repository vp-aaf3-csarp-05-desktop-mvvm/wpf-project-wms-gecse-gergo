<Window x:Class="WMSProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel />
    </Window.DataContext>
    <WrapPanel>
    <Border 
        BorderBrush="DarkGoldenrod" 
        BorderThickness="5"
        CornerRadius="10"
        Padding="4"
        Margin="4">
    <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Név:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="4 0 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Adószám:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TaxNumber}" VerticalAlignment="Center"/>
                </StackPanel>
        <StackPanel Orientation="Horizontal">
                    <Label Content="Kivett szabadnapok száma:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Daysoff}" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
    </Border>
    </WrapPanel>
</Window>
